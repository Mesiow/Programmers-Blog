<%- include("partials/header") %>

<h2 id="blogs-header" class="ui image header" style="color: white; text-align: center;">
  <i class="fas fa-code" style="font-size:xx-large;"></i>
  <div class="content">Blogs</div>
</h2>

<div class="ui grid container">
  <% blogs.forEach(blog => { %>
    <div class="four wide column">
        <div class="ui link special card">
            <div class="blurring dimmable image">
              <div class="ui dimmer">
                <div class="content">
                  <div class="center">
                    <div class="ui inverted button">Read</div>
                  </div>
                </div>
              </div>
              <img src="/<%=blog.filename%>">
            </div>
            <div class="content">
              <a class="header"><%=blog.title%></a>
              <div class="meta">
                <span style="font-weight: 600;"><%=blog.desc%></span>
              </div>
            </div>
            <div class="extra content date">
              <a>
                <%=blog.date.toLocaleDateString()%>
              </a>
            </div>
          </div>
    </div>
    <% }) %>
</div>

<script type="text/javascript" src="/scripts/index.js"></script>



<%- include("partials/footer") %>