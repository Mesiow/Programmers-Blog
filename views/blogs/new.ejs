<%- include("../partials/header") %>

<link rel="stylesheet" type="text/css" href="/stylesheets/new.css">


<div class="ui middle aligned center aligned grid">
<div class="column">
<!--<div id="form-segment" class="ui segment">-->
  <h2 class="ui image header" style="color: white;">
    <i class="fas fa-code" style="font-size:xx-large;"></i>
    <div class="content">New Blog</div>
  </h2>

   <form class="ui form">
     <div class="ui stacked segment">
     <div id="title-field" class="field">
       <label>Title</label>
       <input type="text" name="title" placeholder="Title" required>
     </div>
     <div id="description-field" class="field">
       <label>Description</label>
       <textarea name="desc" placeholder="Description" rows="5" required></textarea>
     </div>
     <div id="markdown-field" class="field">
       <label>Markdown</label>
       <textarea name="markdown" rows="20" required></textarea>
     </div>
     <button class="ui green button" type="submit">Submit</button>
    </div>
    </form>

</div>
</div>


